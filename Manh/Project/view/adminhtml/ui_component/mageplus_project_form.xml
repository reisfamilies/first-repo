<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">mageplus_project_form.mageplus_project_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Project</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <namespace>mageplus_project_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>mageplus_project_form.mageplus_project_form_data_source</dep>
        </deps>
        <buttons>
            <button name="save">
                <label translate="true">Save</label>
                <class>save primary</class>
            </button>
            <button name="save_and_continue" class="Mageplus\Project\Block\Adminhtml\Form\Buttons\SaveAndContinue"/>
            <button name="back">
                <url path="*/*/" />
                <label translate="true">Back</label>
                <class>back</class>
            </button>
            <button name="delete" class="Mageplus\Project\Block\Adminhtml\Form\Buttons\Delete"/>
        </buttons>
    </settings>
    <dataSource name="mageplus_project_form_data_source" component="Magento_Ui/js/form/provider">
        <settings>
            <submitUrl path="project/project/save"/>
        </settings>
        <dataProvider class="Mageplus\Project\Ui\DataProvider\Project\Form\DataProvider"
                      name="mageplus_project_form_data_source">
            <settings>
                <requestFieldName>project_id</requestFieldName>
                <primaryFieldName>project_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <settings>
            <collapsible>true</collapsible>
            <label translate="true">General</label>
            <opened>true</opened>
        </settings>
        <field name="project_id" sortOrder="10" formElement="hidden">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">project_id</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Project ID</label>
                <dataScope>project_id</dataScope>
            </settings>
        </field>
        <field name="project_name" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">project_name</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <label translate="true">Project Name</label>
                <dataScope>project_name</dataScope>
            </settings>
        </field>
        <field name="completion_year" sortOrder="25" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">completion_year</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Completion Year</label>
                <dataScope>completion_year</dataScope>
            </settings>
        </field>
        <field name="status" sortOrder="30" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Mageplus\Project\Model\Source\Project\Status</item>
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">status</item>
                </item>
            </argument>
            <settings>
<!--                <options class="Mageplus\Project\Model\Source\Project\Status"/>-->
                <dataType>number</dataType>
                <label translate="true">Status</label>
                <dataScope>status</dataScope>
            </settings>
        </field>
        <field name="position" sortOrder="35" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">position</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Position</label>
                <dataScope>position</dataScope>
            </settings>
        </field>
        <field name="street" sortOrder="40" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">street</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Street</label>
                <dataScope>street</dataScope>
            </settings>
        </field>
        <field name="city" sortOrder="50" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">city</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">City</label>
                <dataScope>city</dataScope>
            </settings>
        </field>
        <field name="country" sortOrder="60" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Mageplus\Project\Model\Source\Project\Country</item>
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">country</item>
                </item>
            </argument>
            <settings>
<!--                <options class="Mageplus\Project\Model\Source\Project\Country"/>-->
                <dataType>text</dataType>
                <label translate="true">Country</label>
                <dataScope>country_id</dataScope>
            </settings>
        </field>
        <field name="region" sortOrder="70" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">region</item>
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <dataScope>region</dataScope>
            </settings>
        </field>
        <field name="region_id">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Customer\Model\ResourceModel\Address\Attribute\Source\Region</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true">State/Province</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="customEntry" xsi:type="string">region</item>
                    <item name="filterBy" xsi:type="array">
                        <item name="target" xsi:type="string">${ $.provider }:${ $.parentScope }.country_id</item>
                        <item name="field" xsi:type="string">country_id</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="short_description" sortOrder="90" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">short_description</item>
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Short Description</label>
                <dataScope>short_description</dataScope>
            </settings>
        </field>
        <field name="description" sortOrder="100" formElement="wysiwyg">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">description</item>
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Description</label>
                <dataScope>description</dataScope>
            </settings>
        </field>
        <field name="stores" sortOrder="110" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Mageplus\Project\Model\Source\Project\StoreOptions</item>
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">stores</item>
                </item>
            </argument>
            <settings>
<!--                <options class="Mageplus\Project\Model\Source\Project\StoreOptions"/>-->
                <dataType>multiselect</dataType>
                <label translate="true">Store View</label>
                <dataScope>stores</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="url_key" sortOrder="120" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">url_key</item>
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Url Key</label>
                <dataScope>url_key</dataScope>
            </settings>
        </field>
        <field name="redirect_url" sortOrder="130" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">redirect_url</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Redirect Url</label>
                <dataScope>redirect_url</dataScope>
            </settings>
        </field>
    </fieldset>
